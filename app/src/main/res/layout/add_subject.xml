<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_background">


    <EditText

        android:id="@+id/add_subject_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Sample"
        android:textSize="40dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/add_subject_totalLec_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_subject_name_editText"
        android:text="Total Lectures :"
        android:textSize="26dp"

        />

    <EditText
        android:id="@+id/add_subject_totalLec_editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_subject_totalLec_text_view"
        android:layout_toEndOf="@+id/add_subject_totalLec_text_view"
        android:layout_toRightOf="@+id/add_subject_totalLec_text_view"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/add_subject_bunkedLec_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/add_subject_totalLec_text_view"
        android:text="Bunked Lectures :"
        android:textSize="26dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/add_subject_bunkedLec_editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/subject_bunkedLec_text_view"
        android:layout_toEndOf="@+id/subject_bunkedLec_text_view"
        android:layout_toRightOf="@+id/subject_bunkedLec_text_view"
        android:layout_marginLeft="30dp"/>

   <Button
       android:layout_width="match_parent"
       android:id="@+id/add_subject_data_button"
       android:layout_height="wrap_content"
       android:layout_below="@id/add_subject_bunkedLec_text_view"
       android:layout_marginTop="50dp"
       android:text="ADD SUBJECT"/>

</RelativeLayout>