<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raghavi.attendancemanager.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/total_lectures"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/total_lectures"

    android:id="@+id/bunked_lectures"
    android:layout_marginTop="15dp"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bunked_lectures"
        android:layout_marginTop="15dp"
        android:id="@+id/attendance_button"
        android:text="attendance"
        android:textSize="30sp"
        android:clickable="true"
        android:onClick="setAttendanceTextView"
        />
</RelativeLayout>
